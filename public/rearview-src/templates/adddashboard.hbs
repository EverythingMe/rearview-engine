<!-- Add Dashboard Modal -->
<div id='addDashboard' class='add-dashboard modal hide fade'>
    <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal' aria-hidden='true'><i class='icon-remove-circle'></i></button>
        <h1 id='addDashboardLabel'>Add A New Dashboard</h1>
    </div>
    <div class='modal-body'>
        <h2>Setup</h2>
        <div class='hero-unit'>
            <form id='addDashboardForm' class='clearfix'>
                <fieldset class='dashboard-name control-group'>
                    <label for='dashboardName' class='control-label'>Name:</label>
                    <input type='text' id='dashboardName' name='dashboardName' class='input-block-level'>
                </fieldset>
                <fieldset class='dashboard-description control-group'>
                    <label for='dashboardDescription' class='control-label'>Description:</label>
                    <textarea id='dashboardDescription' name='dashboardDescription' class='input-block-level'></textarea>
                </fieldset>
            </form>
        </div>
    </div>
    <div class='modal-footer'>
        <button class='saveDashboard btn'>Save</button>
        <button class='saveCloseDashboard btn btn-primary'>Save &amp; Close</button>
    </div>
</div>